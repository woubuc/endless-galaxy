{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asyncIterable", "dom"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "nuxt-i18n"
    ],

    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["types/*"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
